{
  "name": "og-image-generator-cloudlfare-worker",
  "module": "index.ts",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "dev:staging": "wrangler dev src/index.ts --config wrangler.staging.toml",
    "deploy": "wrangler deploy --minify src/index.ts",
    "deploy:staging": "wrangler deploy --minify src/index.ts --config wrangler.staging.toml",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "format:check": "prettier --check src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@cloudflare/pages-plugin-vercel-og": "^0.1.2",
    "autoprefixer": "^10.4.20",
    "hono": "^4.6.11",
    "postcss-cli": "^11.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.15"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "@types/bun": "latest",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vercel/og": "^1.0.0",
    "prettier": "^3.6.2",
    "wrangler": "^3.88.0"
  }
}
